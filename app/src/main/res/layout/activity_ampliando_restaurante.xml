<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoHotel"
    android:background="@drawable/gira">

    <TextView
        android:id="@+id/Àmpliandonombrerest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTAURANTE EL BUEN SAZON"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blueviolet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1" />


    <ImageView
        android:id="@+id/AmpliandofotoRest"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/r5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Àmpliandonombrerest"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/AmpliandoprecioRest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$29.000 COP"
        android:textColor="@color/blueviolet"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AmpliandofotoRest"
        app:layout_constraintVertical_bias="0.141"
        app:layout_constraintHorizontal_bias="0.02"/>

    <TextView
        android:id="@+id/Ampliandocontactohotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3157854262"
        android:textColor="@color/blueviolet"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AmpliandoprecioRest"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.02"/>

    <TextView
        android:id="@+id/resenaAhotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En este hermoso hotel tenemos la mejor atencion para ti y tu familia. Contamos con la mejor vista a nuestro hermoso paisaje "
        android:textColor="@color/blueviolet"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ampliandocontactohotel"
        app:layout_constraintVertical_bias="0.049"
        app:layout_constraintHorizontal_bias="0.0"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/botonReservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_button"
        android:text="Reservar"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>